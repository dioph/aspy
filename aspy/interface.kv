<GridLayout>:
    padding: 5

<BoxLayout>:
    padding: 5

<Button>:

<Label>:

<Interface>:
    GridLayout:
        cols: 3

        GridLayout:
            rows: 6
            id: elements

            Label:
                text: "Elementos"

            ToggleButton:
                id: trafo
                text: "!"
                group: "elements"

            ToggleButton:
                id: pv
                text: "@"
                group: "elements"

            ToggleButton:
                id: pq
                text: "#"
                group: "elements"

            ToggleButton:
                id: lt
                text: "$"
                group: "elements"

            ToggleButton:
                id: s
                text: "%"
                group: "elements"

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: "Grid"

            GridLayout:
                id: grid
                cols: 10
                rows: 10
                on_parent: root.add_grid(self, elements)

        BoxLayout:  # Inspector
            Label:
                text: "Inspector"